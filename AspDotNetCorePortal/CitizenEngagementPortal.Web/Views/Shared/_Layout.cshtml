<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Citizen Engagement Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="bg-app text-body">
    <div class="background-gradient"></div>
    <div class="background-pattern"></div>
    <header class="position-relative">
        <nav class="navbar navbar-expand-lg navbar-dark glass-nav py-3">
            <div class="container-xl">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-icon d-inline-flex align-items-center justify-content-center rounded-3">
                        <i class="fas fa-city"></i>
                    </span>
                    <span>
                        <span class="d-block fw-semibold">Citizen Engagement</span>
                        <small class="text-white-50">Modern civic collaboration</small>
                    </span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav ms-auto align-items-lg-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Issues" asp-action="Create">Report Issue</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                                </li>
                            }
                        }
                        <div class="ms-lg-3">
                            <partial name="_LoginPartial" />
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="main-wrapper position-relative">
        <main role="main" class="py-5">
            <div class="container-xl">
                @RenderBody()
            </div>
        </main>
    </div>
    <footer class="footer-modern text-white py-4">
        <div class="container-xl d-flex flex-column flex-lg-row justify-content-between align-items-center gap-3">
            <div>
                <div class="fw-semibold">Citizen Engagement Portal</div>
                <small class="text-white-50">Empowering communities through transparency and collaboration.</small>
            </div>
            <div class="d-flex gap-3 text-white-50">
                <span><i class="fas fa-lock me-2"></i>Secure Platform</span>
                <span><i class="fas fa-seedling me-2"></i>Sustainable Cities</span>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>