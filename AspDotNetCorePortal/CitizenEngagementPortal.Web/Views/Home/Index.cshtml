@{
    ViewData["Title"] = "Citizen Engagement Portal";
}

<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Building Better Communities Together</h1>
                <p class="lead mb-4">
                    Report community issues, track their resolution, and engage with local authorities 
                    through our comprehensive citizen engagement platform.
                </p>
                <div class="d-flex gap-3">
                    <a href="@Url.Action("Register", "Account")" class="btn btn-light btn-lg">Get Started</a>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-light btn-lg">Sign In</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <i class="fas fa-city" style="font-size: 300px; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="mb-4">How It Works</h2>
            <p class="text-muted">Simple, transparent, and effective community engagement</p>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-3 text-center">
            <div class="feature-card">
                <div class="feature-icon mb-3">
                    <i class="fas fa-map-marker-alt fa-3x text-primary"></i>
                </div>
                <h4>Report Issues</h4>
                <p>Easily report community problems with location tagging and photo evidence</p>
            </div>
        </div>
        <div class="col-md-3 text-center">
            <div class="feature-card">
                <div class="feature-icon mb-3">
                    <i class="fas fa-chart-line fa-3x text-success"></i>
                </div>
                <h4>Track Progress</h4>
                <p>Monitor the status of your reports in real-time</p>
            </div>
        </div>
        <div class="col-md-3 text-center">
            <div class="feature-card">
                <div class="feature-icon mb-3">
                    <i class="fas fa-comments fa-3x text-info"></i>
                </div>
                <h4>Stay Connected</h4>
                <p>Communicate with authorities and receive updates</p>
            </div>
        </div>
        <div class="col-md-3 text-center">
            <div class="feature-card">
                <div class="feature-icon mb-3">
                    <i class="fas fa-shield-alt fa-3x text-warning"></i>
                </div>
                <h4>Transparent Process</h4>
                <p>Full transparency in issue resolution and accountability</p>
            </div>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="mb-4">Platform Statistics</h2>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-3 text-center">
            <div class="stat-card">
                <div class="stat-number">24/7</div>
                <div class="stat-label">Availability</div>
            </div>
        </div>
        <div class="col-md-3 text-center">
            <div class="stat-card">
                <div class="stat-number">Real-time</div>
                <div class="stat-label">Updates</div>
            </div>
        </div>
        <div class="col-md-3 text-center">
            <div class="stat-card">
                <div class="stat-number">100%</div>
                <div class="stat-label">Transparent</div>
            </div>
        </div>
        <div class="col-md-3 text-center">
            <div class="stat-card">
                <div class="stat-number">Secure</div>
                <div class="stat-label">Platform</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 text-center">
            <div class="cta-section bg-light p-5 rounded">
                <h3 class="mb-3">Ready to Make a Difference?</h3>
                <p class="text-muted mb-4">
                    Join thousands of citizens already making their communities better.
                </p>
                <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-lg">Create Your Account</a>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .feature-card {
        padding: 2rem;
        height: 100%;
        transition: transform 0.3s ease;
    }
    
    .feature-card:hover {
        transform: translateY(-5px);
    }
    
    .feature-icon {
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .stat-card {
        padding: 2rem;
        background: #f8f9fa;
        border-radius: 10px;
        border-left: 4px solid #007bff;
    }
    
    .stat-number {
        font-size: 2.5rem;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 0.5rem;
    }
    
    .stat-label {
        color: #6c757d;
        font-weight: 500;
    }
    
    .cta-section {
        border: 2px solid #e9ecef;
    }
</style>