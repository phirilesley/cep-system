@{
    ViewData["Title"] = "Citizen Engagement Portal";
    ViewData["UseFullWidth"] = true;
    ViewData["MainPaddingClass"] = "py-0";
}

<section class="hero-modern">
    <div class="hero-overlay"></div>
    <div class="container-xl position-relative">
        <div class="row align-items-center g-5">
            <div class="col-lg-6">
                <div class="badge text-uppercase text-white-50 mb-3">Civic innovation platform</div>
                <h1 class="display-4 fw-bold text-white mb-4">Empower your city with real-time citizen engagement.</h1>
                <p class="lead text-white-50 mb-4">
                    Capture, triage, and resolve community issues with a beautifully modern dashboard that keeps citizens, officials, and administrators aligned at every step.
                </p>
                <div class="d-flex flex-wrap gap-3">
                    <a href="@Url.Action("Register", "Account")" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-rocket me-2"></i>Launch your portal
                    </a>
                    <a href="@Url.Action("Login", "Account")" class="btn btn-soft-light btn-lg px-4 text-white">
                        Explore the experience
                    </a>
                </div>
                <div class="d-flex flex-wrap gap-4 mt-4 text-white-50">
                    <div class="d-flex align-items-center gap-2">
                        <span class="pulse-dot"></span>
                        Live service health monitoring
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <span class="pulse-dot"></span>
                        Automated status updates
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="dashboard-preview shadow-lg">
                    <div class="preview-header d-flex justify-content-between align-items-center">
                        <span class="text-muted fw-semibold">Active Issues</span>
                        <span class="badge bg-success-subtle text-success"><i class="fas fa-circle me-2"></i>Online</span>
                    </div>
                    <div class="preview-body">
                        <div class="preview-row">
                            <div>
                                <h5 class="mb-1">Smart Lighting Upgrade</h5>
                                <small class="text-muted">Downtown District · Infrastructure</small>
                            </div>
                            <span class="badge rounded-pill bg-gradient-blue">In Progress</span>
                        </div>
                        <div class="preview-row">
                            <div>
                                <h5 class="mb-1">Community Park Cleanup</h5>
                                <small class="text-muted">Eastside · Environment</small>
                            </div>
                            <span class="badge rounded-pill bg-gradient-purple">Scheduled</span>
                        </div>
                        <div class="preview-row">
                            <div>
                                <h5 class="mb-1">Roadway Pothole Repairs</h5>
                                <small class="text-muted">North Avenue · Safety</small>
                            </div>
                            <span class="badge rounded-pill bg-gradient-green">Resolved</span>
                        </div>
                    </div>
                    <div class="preview-footer text-center text-muted">
                        Trusted by forward-thinking municipalities worldwide.
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section-spacing">
    <div class="container-xl">
        <div class="row g-4">
            <div class="col-12 text-center">
                <h2 class="section-title">Designed for meaningful civic impact</h2>
                <p class="section-subtitle">Powerful workflows and thoughtful design help your teams respond faster and communicate better.</p>
            </div>
            <div class="col-md-4">
                <div class="feature-tile h-100">
                    <span class="feature-icon gradient-primary">
                        <i class="fas fa-map-marked-alt"></i>
                    </span>
                    <h4 class="mt-3">Guided issue reporting</h4>
                    <p class="text-muted mb-0">Intuitive forms, smart categories, and geo-tagging make it effortless for citizens to highlight what matters most.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-tile h-100">
                    <span class="feature-icon gradient-success">
                        <i class="fas fa-wave-square"></i>
                    </span>
                    <h4 class="mt-3">Operational visibility</h4>
                    <p class="text-muted mb-0">Live dashboards surface trends, SLA commitments, and assignments so nothing slips through the cracks.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-tile h-100">
                    <span class="feature-icon gradient-warning">
                        <i class="fas fa-handshake-angle"></i>
                    </span>
                    <h4 class="mt-3">Transparent collaboration</h4>
                    <p class="text-muted mb-0">Automated notifications and two-way messaging keep citizens informed and teams coordinated.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section-spacing pt-0">
    <div class="container-xl">
        <div class="row g-4 align-items-center">
            <div class="col-lg-5">
                <div class="glass-card p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h3 class="h4 mb-1">Performance at a glance</h3>
                            <p class="text-muted mb-0">Stay ahead with insights curated for city leadership.</p>
                        </div>
                        <span class="badge bg-primary-subtle text-primary"><i class="fas fa-chart-pie me-2"></i>Insights</span>
                    </div>
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="metric-card gradient-blue">
                                <span class="metric-label">Community satisfaction</span>
                                <span class="metric-value">92%</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="metric-card gradient-green">
                                <span class="metric-label">Average response time</span>
                                <span class="metric-value">4.2 hrs</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="metric-card gradient-purple">
                                <span class="metric-label">Cases resolved this week</span>
                                <span class="metric-value">178</span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="metric-card gradient-orange">
                                <span class="metric-label">Automation coverage</span>
                                <span class="metric-value">68%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="timeline-modern">
                    <div class="timeline-item">
                        <div class="timeline-icon gradient-primary"><i class="fas fa-bullhorn"></i></div>
                        <div class="timeline-content">
                            <h5>Citizens submit enriched reports</h5>
                            <p class="text-muted mb-0">Collect structured data, attachments, and location details from any device with accessibility-first design.</p>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-icon gradient-success"><i class="fas fa-users-gear"></i></div>
                        <div class="timeline-content">
                            <h5>Teams coordinate with precision</h5>
                            <p class="text-muted mb-0">Smart assignment rules and SLA playbooks keep the right teams accountable at every stage.</p>
                        </div>
                    </div>
                    <div class="timeline-item">
                        <div class="timeline-icon gradient-info"><i class="fas fa-message"></i></div>
                        <div class="timeline-content">
                            <h5>Transparent communication loops</h5>
                            <p class="text-muted mb-0">Status updates, feedback loops, and sentiment tracking build lasting trust with residents.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="section-spacing">
    <div class="container-xl">
        <div class="row g-4 align-items-stretch">
            <div class="col-lg-5">
                <div class="testimonial-card h-100">
                    <div class="quote-icon gradient-primary"><i class="fas fa-quote-left"></i></div>
                    <p class="lead">“We resolved 40% more citizen-reported issues in the first quarter thanks to the clarity and coordination this platform brings.”</p>
                    <div class="d-flex align-items-center gap-3">
                        <div class="avatar-gradient"></div>
                        <div>
                            <div class="fw-semibold">Amelia Chen</div>
                            <small class="text-muted">Director of Civic Innovation, City of Brightford</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="cta-panel h-100">
                    <div class="row g-4 align-items-center">
                        <div class="col-md-7">
                            <h3 class="mb-3">Bring modern service design to your municipality</h3>
                            <p class="text-muted mb-4">From onboarding to launch, our success team guides you every step of the way with tailored training and migration support.</p>
                            <div class="d-flex flex-wrap gap-3">
                                <a href="@Url.Action("Register", "Account")" class="btn btn-primary px-4">Schedule a demo</a>
                                <a href="mailto:hello@cep.local" class="btn btn-soft-light px-4">Meet our strategists</a>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <ul class="list-unstyled mb-0 text-muted">
                                <li class="d-flex align-items-center gap-2 mb-2"><i class="fas fa-check text-success"></i>Inclusive design standards</li>
                                <li class="d-flex align-items-center gap-2 mb-2"><i class="fas fa-check text-success"></i>Data privacy built-in</li>
                                <li class="d-flex align-items-center gap-2"><i class="fas fa-check text-success"></i>Launch in under 30 days</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>